		<class>cl.altair.acceso.modelo.Region</class>
		<class>cl.altair.acceso.modelo.Direccion</class>
		<class>cl.altair.acceso.modelo.Edificio</class>
		<class>cl.altair.acceso.modelo.Cliente</class>
